<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:orientation="horizontal"
        android:padding="@dimen/actionPadding"
        android:gravity="center_vertical"
        android:background="@color/themeColor">
        <ImageView
            android:id="@+id/pay_order_back_image"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:src="@drawable/leftwhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pay_order"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:paddingRight="20dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="40dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pay_order_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/example" />
        <TextView
            android:id="@+id/pay_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/pay_order_image"
            android:text="@string/example_shop_name"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/pay_order_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pay_order_name"
            android:layout_alignLeft="@id/pay_order_name"
            android:text="@string/rmb"
            android:textSize="20sp"
            android:textColor="@color/themeColor"/>
        <TextView
            android:id="@+id/pay_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pay_order_name"
            android:layout_toRightOf="@id/pay_order_rmb"
            android:text="@string/example_start_price"
            android:textSize="20sp"
            android:textColor="@color/themeColor"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spilt"/>
    <ListView
        android:id="@+id/pay_order_ways_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>