<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/shop_main_orderfragment_main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/shop_main_orderfragment_kinds_list"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"/>

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/shop_main_orderfragment_goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </se.emilsjolander.stickylistheaders.StickyListHeadersListView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spilt"/>
    <LinearLayout
        android:id="@+id/shop_main_orderfragment_shopcart_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shop_main_orderfragment_shopcart_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/emptyshopcart"/>
        <TextView
            android:id="@+id/shop_main_orderfragment_shopcart_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="@string/empty_cart"
            android:textColor="@color/noTextColor"/>
        <TextView
            android:id="@+id/shop_main_orderfragment_shopcart_btn"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/start_price"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@color/shopcartbutton"/>
    </LinearLayout>
</LinearLayout>