<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shop_main_evaluate_list_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/example" />
    <TextView
        android:id="@+id/shop_main_evaluate_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/shop_main_evaluate_list_image"
        android:layout_toRightOf="@id/shop_main_evaluate_list_image"
        android:layout_weight="1"
        android:text="@string/example_evaluate_phone"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/shop_main_evaluate_list_date"
        android:layout_alignTop="@id/shop_main_evaluate_list_image"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:text="@string/example_evaluate_date"/>
    <LinearLayout
        android:id="@+id/shop_main_evaluate_star_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@id/shop_main_evaluate_list_image"
        android:layout_alignLeft="@id/shop_main_evaluate_list_name"
        android:layout_alignBottom="@id/shop_main_evaluate_list_image"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shop_main_evaluate_list_star1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/fullstar"/>
        <ImageView
            android:id="@+id/shop_main_evaluate_list_star2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/fullstar"/>
        <ImageView
            android:id="@+id/shop_main_evaluate_list_star3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/fullstar"/>
        <ImageView
            android:id="@+id/shop_main_evaluate_list_star4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/fullstar"/>
        <ImageView
            android:id="@+id/shop_main_evaluate_list_star5"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/star"/>
        <TextView
            android:id="@+id/shop_main_evaluate_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/example_evaluate_time_number"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/example_evaluate_time"
            android:textSize="14sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/shop_main_evaluate_list_message"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_main_evaluate_list_image"
        android:layout_alignLeft="@id/shop_main_evaluate_list_name"
        android:text="@string/example_evaluate_message"
        android:textSize="16sp"
        android:textColor="@color/black"/>


</RelativeLayout>